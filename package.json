{
  "name": "golang-react-template",
  "author": "Andrew Odewahn",
  "version": "0.1.0",
  "description": "Startup template for golang apps with React frontend",
  "main": "",
  "scripts": {
    "start": "npm run frontend & npm run backend",
    "frontend": "watchify -o backend/public/bundle.js -v -d frontend/main.js",
    "backend": "cd backend; go run main.go"
  },
  "dependencies": {
    "browserify": "^16.5.0",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "reactify": "^1.1.1",
    "watchify": "^3.6.1"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
